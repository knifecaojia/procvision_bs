<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imustsz.craft.mapper.CraftMapper">
    
    <resultMap type="Craft" id="CraftResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="version"    column="version"    />
        <result property="desc"    column="desc"    />
    </resultMap>

    <sql id="selectCraftVo">
        select id, code, name, version, `desc` from biz_craft
    </sql>

    <select id="selectCraftList" parameterType="Craft" resultMap="CraftResult">
        <include refid="selectCraftVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code like concat('%', #{code}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="version != null  and version != ''"> and version = #{version}</if>
            <if test="desc != null  and desc != ''"> and `desc` like concat('%', #{desc}, '%')</if>
            <if test="createTime != null and createTime != ''"> and create_time = #{createTime}</if>
            <if test="createTime != null and createTime != ''"> and update_time = #{updateTime}</if>
            <if test="createBy != null and createBy != ''"> and create_by = #{createBy}</if>
            <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy}</if>
            <if test="remark != null and remark != ''"> and remark = #{remark}</if>
        </where>
    </select>
    
    <select id="selectCraftById" parameterType="Long" resultMap="CraftResult">
        <include refid="selectCraftVo"/>
        where id = #{id}
    </select>

    <insert id="insertCraft" parameterType="Craft" useGeneratedKeys="true" keyProperty="id">
        insert into biz_craft
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="version != null">version,</if>
            <if test="desc != null">`desc`,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="updatedBy != null">updated_by,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="version != null">#{version},</if>
            <if test="desc != null">#{desc},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
            <if test="createdBy != null">#{createdBy},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateCraft" parameterType="Craft">
        update biz_craft
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null">code = #{code},</if>
            <if test="name != null">name = #{name},</if>
            <if test="version != null">version = #{version},</if>
            <if test="desc != null">`desc` = #{desc},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
            <if test="createdBy != null">created_by = #{createdBy},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCraftById" parameterType="Long">
        delete from biz_craft where id = #{id}
    </delete>

    <delete id="deleteCraftByIds" parameterType="String">
        delete from biz_craft where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectCraftIdByCodeAndVersion" resultType="java.lang.Long">
        select id from biz_craft where code = #{code} and version = #{version}
    </select>
</mapper>